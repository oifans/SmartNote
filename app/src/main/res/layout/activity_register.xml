<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weibo.lbzone.smartnote.activity.MainActivity">

    <EditText
        android:id="@+id/et_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="手机号" />

    <Button
        android:id="@+id/bt_sendcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_toRightOf="@+id/et_identifyingcode"
        android:text="发送验证码" />

    <EditText
        android:id="@+id/et_identifyingcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:hint="验证码" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_username"
        android:inputType="textPassword"
        android:hint="请输入密码" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_identifyingcode"
        android:textColor="@color/red"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_hint"
        android:text="注册" />
</RelativeLayout>
